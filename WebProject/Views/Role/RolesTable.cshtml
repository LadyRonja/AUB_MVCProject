@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>Roles Index</h2>
<hr />
<p>Add user to role</p>
<div class="container">
    <form asp-action="AddUserToRole" method="post">
        <div class="form-group">
            <label class="control-label">User:</label>
            <select name="userID" class="form-control" asp-items="ViewBag.Users"></select>
        </div>
        <div class="form-group">
            <label class="control-label">Role:</label>
            <select name="roleID" class="form-control" asp-items="ViewBag.Roles"></select>
        </div>
        <input type="submit" value="Assign Role" />
    </form>
</div>
<hr />


<div class="container">
    <div class="row">
        <div class="col-sm">
            <b>Name</b>
        </div>
        <div class="col-sm">
            <b>ID</b>
        </div>
    </div>
</div>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-sm">
                @item.Name
            </div>
            <div class="col-sm">
                @item.Id
            </div>
        </div>
    }
</div>

